@model BusinessDto

<div class="container mt-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Businesses</a></li>
            <li class="breadcrumb-item active">Delete Business</li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-header">
            <h2 class="card-title mb-0">Delete Business</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-danger mb-4">
                <h5 class="alert-heading">
                    <i class="bi bi-exclamation-triangle"></i> Warning
                </h5>
                Are you sure you want to delete this business? This action cannot be undone.
            </div>

            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Employees</dt>
                <dd class="col-sm-9">@Model.EmployeeCount</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
} 