@model JustTip.Web.Models.DTOs.BusinessDto

@{
    ViewData["Title"] = $"Business Details - {Model.Name}";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Businesses</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="card-title mb-0">@Model.Name</h2>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-controller="Employee" asp-action="Index" asp-route-businessId="@Model.Id" 
                       class="btn btn-success">
                        <i class="bi bi-people"></i> Employees
                    </a>
                    <a asp-action="TipDistribution" asp-route-id="@Model.Id" class="btn btn-info text-white">
                        <i class="bi bi-cash"></i> Distribute Tips
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Total Employees</dt>
                <dd class="col-sm-9">@Model.EmployeeCount</dd>
            </dl>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
} 