@model EmployeeDetailsViewModel

<div class="container mt-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Business" asp-action="Index">Businesses</a></li>
            <li class="breadcrumb-item">
                <a asp-action="Index" asp-route-businessId="@Model.BusinessId">@Model.BusinessName - Employees</a>
            </li>
            <li class="breadcrumb-item active">Delete Employee</li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-header">
            <h2 class="card-title mb-0">Delete Employee</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-danger mb-4">
                <h5 class="alert-heading">
                    <i class="bi bi-exclamation-triangle"></i> Warning
                </h5>
                Are you sure you want to delete this employee? This action cannot be undone.
            </div>

            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Employee.Name</dd>

                <dt class="col-sm-3">Position</dt>
                <dd class="col-sm-9">@Model.Employee.Position</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Employee.Email</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.Employee.Phone</dd>

                <dt class="col-sm-3">Hire Date</dt>
                <dd class="col-sm-9">@Model.Employee.HireDate.ToShortDateString()</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" name="businessId" value="@Model.BusinessId" />
                <input type="hidden" name="id" value="@Model.Employee.Id" />
                
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" asp-route-businessId="@Model.BusinessId" 
                       class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
} 